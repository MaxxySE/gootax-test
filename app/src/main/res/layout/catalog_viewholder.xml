<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cat_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:backgroundTint="@color/cat_ph_color"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cat_view_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cat_ph"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/cat_image_description" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/cat_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="@string/catalog_view_title"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_display_bold"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/text_default"
        android:textAlignment="center" />
</LinearLayout>