<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="14dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_image"
        android:layout_width="@dimen/avatar_image_size"
        android:layout_height="@dimen/avatar_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_ph" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/header_usesrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_username"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_default"
            android:fontFamily="@font/sf_display_medium" />

        <TextView
            android:id="@+id/header_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_phone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_default"
            android:fontFamily="@font/sf_display_regular" />

    </LinearLayout>

</LinearLayout>


