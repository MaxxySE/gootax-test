<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:layout_marginTop="14dp"
    android:fitsSystemWindows="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_ph" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/header_usesrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_username"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="@font/sf_display_medium" />

        <TextView
            android:id="@+id/header_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_phone"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="@font/sf_display_regular" />

    </LinearLayout>

</LinearLayout>


